{
    "schema": {
        "type": "object",
        "properties": {
            "__form": {
                "type": "string"
            }
        },
        "required": ["__form"]
    },
    "root": {
        "type": "object",
        "properties": {
            "dir": {
                "type": "string",
                "pattern": "^$|^[0-9a-f]{8}-[0-9a-f]{4}-[4][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
            },
            "filename": {
                "type": ["string", "null"],
                "pattern": "^([a-zA-Z0-9_\\-/\\.]+)?$",
                "minLength": 0,
                "maxLength": 64
            },
            "date": {
                "type": "string",
                "required": []
            }
        },
        "required": []
    },
    "part": {
        "type": "object",
        "properties": {
            "title": {
                "type": ["string", "null"],
                "minLength": 0,
                "maxLength": 128
            },
            "content": {
                "oneOf": [{
                    "type": "string"
                }, {
                    "type": "null"
                }]
            },
            "css": {
                "oneOf": [{
                    "type": "string"
                }, {
                    "type": "null"
                }]
            },
            "js": {
                "oneOf": [{
                    "type": "string"
                }, {
                    "type": "null"
                }]
            },
            "attachments": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "maxLength": 128
                        },
                        "id": {
                            "type": "string",
                            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
                            "minLength": 36,
                            "maxLength": 36
                        },
                        "type": {
                            "const": "file"
                        },
                        "upload": {
                            "type": "boolean"
                        }
                    },
                    "required": ["name", "id", "type"]
                }
            }
        },
        "required": []
    },
    "files": {
        "attachments": {
            "minAmount": 0,
            "maxAmount": 5,
            "minSizeBytes": 0,
            "maxSizeBytes": 5242880
        }
    }
}
