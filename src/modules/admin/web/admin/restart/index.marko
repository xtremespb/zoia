<if(state.error)>
  <div class="notification is-danger">
    ${state.error}
  </div>
</if>
<div>
  <if(state.loading)>
    <progress class="progress is-danger" max="100"/>
  </if>
  <else>
    <button class="button is-dark" on-click("onRestartClick")>${out.global.i18n.t("restart")}</button>
  </else>
</div>
<mconfirm key="z3_ap_ad_restartConfirm" on-confirm("onRestartConfirm")/>
<mnotify key=`z3_ap_ad_mnotify`/>
