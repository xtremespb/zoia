{
    "webServer": {
        "ip": "127.0.0.1",
        "port": 3001,
        "user": "",
        "group": ""
    },
    "serveStatic": true,
    "siteOptions": {
        "server": "localhost",
        "id": "z3"
    },
    "pm2": {
        "script": "./build/bin/zoia.js",
        "watch": false,
        "exec_mode": "cluster",
        "instances": 0,
        "error_file": true,
        "out_file": true,
        "log_file": false,
        "merge_logs": true,
        "time": false
    },
    "secret": "",
    "token": {
        "expires": "7 days",
        "ip": true
    },
    "logLevel": "info",
    "trustProxy": true,
    "stackTrace": true,
    "email": {
        "template": "default",
        "mailer": {
            "service": "Yandex",
            "auth": {
                "user": "",
                "pass": ""
            }
        },
        "logoFile": "z3_mail_logo.png",
        "from": "ZOIA <info@zoiajs.org>"
    },
    "mongo": {
        "url": "mongodb://127.0.0.1:27017",
        "dbName": "zoia3"
    },
    "redis": {
        "enabled": false,
        "host": "127.0.0.1",
        "port": 6379
    },
    "socketIO": {
        "path": "/socket.io",
        "serveClient": true
    },
    "rateLimit": {
        "enabled": false,
        "redis": false,
        "ban": false,
        "global": false,
        "whiteList": [],
        "blackList": [],
        "addHeaders": {
            "x-ratelimit-limit": true,
            "x-ratelimit-remaining": true,
            "x-ratelimit-reset": true,
            "retry-after": true
        }
    },
    "cookieOptions": {
        "expires": 604800,
        "path": "/",
        "domain": "",
        "secure": null,
        "sameSite": null
    },
    "captchaValidity": 3600,
    "originCORS": "*",
    "languages": {
        "en": "English",
        "ru": "Русский"
    },
    "siteMetadata": {
        "en": {
            "title": "Zoia Website",
            "titleShort": "Zoia Website",
            "descShort": "Example Website powered by ZOIA",
            "siteLink": "https://zoiajs.org",
            "siteLinkText": "Example Website"
        },
        "ru": {
            "title": "Сайт на Zoia",
            "titleShort": "Сайт на Zoia",
            "descShort": "Тестовый веб-сайт, запущенный на ZOIA",
            "siteLink": "https://zoiajs.org",
            "siteLinkText": "Тестовый веб-сайт"
        }
    },
    "commonTableItemsLimit": 20,
    "collections": {
        "files": "files",
        "registry": "registry",
        "counters": "counters"
    },
    "directories": {
        "tmp": "tmp",
        "files": "build/files",
        "images": "build/public/images",
        "publicFiles": "build/public/files"
    },
    "routes": {
        "download": "/zoia/core/download",
        "imagesBrowser": "/zoia/core/images",
        "login": "/users/login",
        "publicFiles": "/files"
    },
    "telegram": {
        "enabled": false,
        "token": ""
    }
}
