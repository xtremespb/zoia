{
    "root": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "anyOf": [{
                    "minLength": 24,
                    "maxLength": 24
                }, {
                    "minLength": 0,
                    "maxLength": 0
                }],
                "pattern": "^[a-f0-9]+$"
            },
            "title": {
                "type": "string",
                "minLength": 1,
                "maxLength": 128

            },
            "table": {
                "type": "string",
                "maxLength": 64

            },
            "type": {
                "type": "integer",
                "enum": [1, 2]
            },
            "filters": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "maxLength": 128
                        },
                        "type": {
                            "type": "string",
                            "enum": ["input", "date", "select"]
                        },
                        "mode": {
                            "type": "string",
                            "enum": ["equals", "notEquals", "isLike", "notLike", "oneOf", "noneOf", "greaterThan", "greaterThanOrEquals", "lessThan", "lessThanOrEquals"]
                        },
                        "value": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": ["string", "array", "null"]
                                }
                            }
                        }
                    },
                    "required": ["id", "mode", "value"]
                }
            }
        },
        "required": ["title"]
    },
    "projection": {},
    "search": []
}
