{
    "schema": {
        "type": "object",
        "properties": {
            "page": {
                "type": "number",
                "minimum": 1,
                "maximum": 999999
            },
            "sortId": {
                "type": "string",
                "enum": ["uid", "title"]
            },
            "sortDirection": {
                "type": "string",
                "enum": ["asc", "desc"]
            },
            "searchText": {
                "type": "string",
                "minLength": 0,
                "maxLength": 128
            },
            "itemsPerPage": {
                "type": "number",
                "minimum": 0,
                "maximum": 1000
            }
        },
        "required": ["page", "sortId", "sortDirection"]
    },
    "projection": {
        "_id": 1,
        "uid": 1,
        "title": 1
    },
    "search": ["uid", "[language].title"]
}
