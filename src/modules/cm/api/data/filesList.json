{
    "schema": {
        "type": "object",
        "properties": {
            "page": {
                "type": "number",
                "minimum": 1,
                "maximum": 999999
            },
            "sortId": {
                "type": "string",
                "enum": ["name", "date", "cardNumber", "cardType", "customerName", "holding"]
            },
            "sortDirection": {
                "type": "string",
                "enum": ["asc", "desc"]
            },
            "searchText": {
                "type": "string",
                "minLength": 0,
                "maxLength": 128
            },
            "itemsPerPage": {
                "type": "number",
                "minimum": 0,
                "maximum": 1000
            }
        },
        "required": ["page", "sortId", "sortDirection"]
    },
    "projection": {
        "_id": 1,
        "name": 1,
        "date": 1,
        "cardNumber": 1,
        "cardType": 1,
        "customerName": 1,
        "holding": 1
    },
    "search": ["name"]
}
