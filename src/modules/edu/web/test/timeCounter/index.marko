$ function formatSeconds(val) {
  var date = new Date(1970, 0, 1);
  date.setSeconds(val);
  return date.toTimeString().replace(/.*(\d{2}:\d{2}:\d{2}).*/, "$1");
}
<if(state.remain || state.wait)>
  <div class="notification is-warning">
    <if(state.remain)>${out.global.i18n.t("remainTime")}: <strong>${formatSeconds(state.remain)}</strong></if>
    <else>
      <if(state.wait)>${out.global.i18n.t("waitTime")}: <strong>${formatSeconds(state.wait)}</strong></if>
    </else>
  </div>
</if>
