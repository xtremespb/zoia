{
    "schema": {
        "type": "object",
        "properties": {
            "page": {
                "type": "number",
                "minimum": 1,
                "maximum": 999999
            },
            "sortId": {
                "type": "string",
                "enum": ["username", "email"]
            },
            "sortDirection": {
                "type": "string",
                "enum": ["asc", "desc"]
            },
            "searchText": {
                "type": "string",
                "minLength": 0,
                "maxLength": 128
            },
            "itemsPerPage": {
                "type": "number",
                "minimum": 0,
                "maximum": 1000
            },
            "filters": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "maxLength": 128
                        },
                        "type": {
                            "type": "string",
                            "enum": ["input", "date", "select"]
                        },
                        "mode": {
                            "type": "string",
                            "enum": ["equals", "notEquals", "isLike", "notLike", "oneOf", "noneOf", "greaterThan", "greaterThanOrEquals", "lessThan", "lessThanOrEquals"]
                        },
                        "value": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": ["string", "array"]
                                }
                            }
                        }
                    },
                    "required": ["id", "mode", "value"]
                }
            }
        },
        "required": ["page", "sortId", "sortDirection"]
    },
    "projection": {
        "_id": 1,
        "username": 1,
        "email": 1,
        "status": 1
    },
    "search": ["username", "email"]
}
