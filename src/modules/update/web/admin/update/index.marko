<h1 class="z3-ap-head-thin">
  <span class="icon">
    <i class="mdi z3-ap-mdi-head mdi-dark mdi-update"/>
  </span>&nbsp;${out.global.i18n.t("moduleTitle")}
</h1>
<div class="my-5">
  <b>${out.global.i18n.t("currentVersion")}</b>:&nbsp;${out.global.buildJson.version} / ${out.global.i18n.t(out.global.buildJson.mode)} (${out.global.buildJson.id}, ${out.global.i18n.t("pid")} ${out.global.pid})<br/>
  <b>${out.global.i18n.t("buildDate")}</b>:&nbsp;${new Date(out.global.buildJson.date).toLocaleString()}
</div>
<if(state.status)>
  <div class="notification">
    <p>${state.status}</p>
    <progress class="progress is-small is-primary" max="100">&nbsp;</progress>
  </div>
</if>
<if(state.error)>
  <div class="notification is-danger">
    <button class="delete" on-click("onErrorDelete")/>
    <p>${state.error}</p>
  </div>
</if>
<if(state.warnRebuild)>
  <div class="notification is-warning">
    <button class="delete" on-click("onWarnRebuildDelete")/>
    ${out.global.i18n.t("warnRebuildText")}<div class="mt-3">
      <button class="button is-primary" on-click("onRebuildConfirmClick")>${out.global.i18n.t("confirm")}</button>
    </div>
  </div>
</if>
<div class="field has-addons">
  <p class="control">
    <button class=`button${state.progress ? " is-loading" : ""}` on-click("onRebuildClick")>
      <span class="icon is-small">
        <i class="mdi mdi-update"/>
      </span>
      <span>${out.global.i18n.t("rebuild")}</span>
    </button>
  </p>
  <p class="control">
    <button class=`button${state.progress ? " is-loading" : ""}` disabled>
      <span class="icon is-small">
        <i class="mdi mdi-cloud-download-outline"/>
      </span>
      <span>${out.global.i18n.t("update")}</span>
    </button>
  </p>
</div>
