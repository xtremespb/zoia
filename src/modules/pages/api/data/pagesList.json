{
    "schema": {
        "type": "object",
        "properties": {
            "page": {
                "type": "number",
                "minimum": 1,
                "maximum": 999999
            },
            "sortId": {
                "type": "string",
                "enum": ["dir", "title"]
            },
            "sortDirection": {
                "type": "string",
                "enum": ["asc", "desc"]
            },
            "searchText": {
                "type": "string",
                "minLength": 0,
                "maxLength": 128
            },
            "itemsPerPage": {
                "type": "number",
                "minimum": 0,
                "maximum": 1000
            },
            "language": {
                "type": "string",
                "pattern": "^[a-z]{2}$",
                "minLength": 2,
                "maxLength": 2
            },
            "dir": {
                "type": "string",
                "minLength": 0,
                "maxLength": 128
            }
        },
        "required": ["page", "sortId", "sortDirection", "language"]
    },
    "projection": {
        "_id": 1,
        "dir": 1,
        "dirString": 1
    },
    "search": ["dirString", "title"]
}
